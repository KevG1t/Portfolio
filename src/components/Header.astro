---
import Navbar from '@/components/Navbar.astro'
import Bars from '../../public/icons/Bars.astro'
---
<header class="mx-auto w-full flex justify-end lg:justify-center items-center p-4 fixed top-0 z-10 ">
  <Navbar/>
  <button id="menu-button" class="flex items-center h-10 w-10 z-40 lg:hidden">
    <Bars />
  </button>
</header>
<script>
  const menuButton = document.getElementById('menu-button')!
  const list = document.querySelector('.list')!

  menuButton.addEventListener('click', () => {
    list.classList.toggle('hidden');
  })
</script>

<style>
  header {
    animation: nav-shadown 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  @keyframes nav-shadown {
    to {
      @apply shadow-lg backdrop-blur text-text-neutral;
    }
  }
</style>